#!/usr/bin/env sh

# TASK-167: Pre-commit hooks for code quality gates
# This hook runs linting and formatting checks before allowing commits.

echo "üîç Running pre-commit checks..."

# ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ
# BACKEND CHECKS (Go)
# ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ

# Check if Go files were modified
BACKEND_FILES=$(git diff --cached --name-only --diff-filter=ACM -- 'backend/*.go')

if [ -n "$BACKEND_FILES" ]; then
    echo "üì¶ Checking Go files..."

    # Run gofmt
    GOFMT_OUTPUT=$(gofmt -l $BACKEND_FILES 2>/dev/null)
    if [ -n "$GOFMT_OUTPUT" ]; then
        echo "‚ùå Go formatting errors found:"
        echo "$GOFMT_OUTPUT"
        echo "Run 'gofmt -w' on these files."
        exit 1
    fi

    # Run go vet
    echo "  ‚úì gofmt passed"
    cd backend
    go vet ./... 2>/dev/null
    if [ $? -ne 0 ]; then
        echo "‚ùå go vet found issues"
        exit 1
    fi
    echo "  ‚úì go vet passed"

    # Run golangci-lint if available
    if command -v golangci-lint &> /dev/null; then
        golangci-lint run --config=.golangci.yaml --timeout=2m --fast 2>/dev/null
        if [ $? -ne 0 ]; then
            echo "‚ùå golangci-lint found issues"
            exit 1
        fi
        echo "  ‚úì golangci-lint passed"
    fi

    cd ..
fi

# ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ
# FRONTEND CHECKS (TypeScript / Next.js)
# ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ

FRONTEND_FILES=$(git diff --cached --name-only --diff-filter=ACM -- 'frontend/*.ts' 'frontend/*.tsx' 'frontend/*.js' 'frontend/*.jsx')

if [ -n "$FRONTEND_FILES" ]; then
    echo "üì¶ Checking Frontend files..."

    cd frontend

    # Run ESLint on staged files only
    npx eslint --max-warnings=0 $FRONTEND_FILES 2>/dev/null
    if [ $? -ne 0 ]; then
        echo "‚ùå ESLint found issues in staged files"
        cd ..
        exit 1
    fi
    echo "  ‚úì ESLint passed"

    # Run Prettier check
    if npx prettier --check $FRONTEND_FILES 2>/dev/null; then
        echo "  ‚úì Prettier passed"
    else
        echo "‚ö†Ô∏è Prettier formatting issues (auto-fixing...)"
        npx prettier --write $FRONTEND_FILES
        git add $FRONTEND_FILES
    fi

    cd ..
fi

# ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ
# SECURITY CHECKS
# ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ

# Check for hardcoded secrets
echo "üîí Checking for hardcoded secrets..."
SECRETS_PATTERN='(password|secret|api_key|apikey|token|private_key)\s*[:=]\s*["\x27][^\s"]+["\x27]'
FOUND_SECRETS=$(git diff --cached --name-only --diff-filter=ACM | xargs grep -ilE "$SECRETS_PATTERN" 2>/dev/null | grep -v '_test\.' | grep -v '.env.example' | grep -v 'package-lock.json' | grep -v 'node_modules')

if [ -n "$FOUND_SECRETS" ]; then
    echo "‚ö†Ô∏è  Potential hardcoded secrets found in:"
    echo "$FOUND_SECRETS"
    echo "Review these files before committing."
    # Warning only, not blocking ‚Äî could be false positives
fi

echo "‚úÖ All pre-commit checks passed!"
exit 0
